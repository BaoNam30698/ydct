    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>Thay đổi mật khẩu cho tài khoản doanh nghiệp: {{vm.dataForm.maSoThue}}</span>
                <button type="button" class="close" ng-click="vm.cancel()" aria-hidden="true"></button>
            </h4>
        </div>
        <div class="modal-body" id="changePassForm" name="changePassForm">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mật khẩu mới <span class="font-red">*</span></label>
                        <input class="form-control" type="password" name="matKhau" ng-model="vm.matkhau.matKhauMoi" data-fv-notempty="true" data-fv-notempty-message="Không được để trống trường này" data-fv-trigger="blur" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Xác nhận mật khẩu <span class="font-red">*</span></label>
                        <input class="form-control" type="password" name="matKhauXacNhan" ng-model="vm.matkhau.matKhauXacNhan" data-fv-notempty="true" data-fv-notempty-message="Không được để trống trường này" data-fv-trigger="blur">
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="col-md-12">
                <button type="button" class="btn green-meadow" ng-click="vm.changePassword()"><i class="fa fa-save"></i>Lưu</button>
                <button type="button" class="btn btn-default" ng-click="vm.cancel()"><i class="glyphicon glyphicon-remove"></i>Đóng</button>
            </div>
        </div>
    </div>