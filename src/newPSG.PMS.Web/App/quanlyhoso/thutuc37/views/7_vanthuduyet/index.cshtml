@using newPSG.PMS.Localization

<style type="text/css">
    #form-van-thu-duyet .custom-error-validate {
        display: none;
    }
</style>
<div class="danhsach" ng-controller="quanlyhoso.thutuc37.views.vanthuduyet.index as vm">
    <div class="portlet light bordered" ng-show="vm.show_mode==null">
        <div class="portlet-title">
            <div class="caption font-blue-soft">
                <em class="icon-list font-blue-soft"></em>
                <span class="caption-subject bold uppercase">Danh sách văn bản cần duyệt và đóng dấu</span>
            </div>
        </div>
        <div class="portlet-body">
            <quanlyhoso.thutuc37.directives.gridhoso form="vm.form"
                                                     filterobj="vm.filter"
                                                     vanthuduyet="vm.openVanThuDuyet"
                                                     vanthudongdau="vm.dongDauNhanh"
                                                     dongdaunhieu="vm.dongDauNhieu"
                                                     loadcheckall="vm.updateArrCheckbox" />
        </div>
    </div>

    <div class="portlet light" ng-show="vm.show_mode == 'van_thu_duyet'">
        <div class="portlet-title">
            <div class="caption font-blue-soft uppercase">
                <em class="fa fa-pencil font-blue-soft"></em>Kết quả hồ sơ - [ {{vm.dataItem.soDangKy}} ]
                <quanlyhoso.thutuc37.directives.util.boxngayquahan dataitem="vm.dataItem" ng-if="vm.show_mode=='van_thu_duyet'" />
            </div>
            <div class="tools">
                <div class="input-group" style="float: left;margin-right: 10px;">
                    <div class="" uib-dropdown auto-close="disabled" is-open="vm.dropdownSearchIsOpen">
                        <button id="button1" type="button" class="btn btn-sm btn-success dropdown-toggle" uib-dropdown-toggle>Xem lịch sử <em class="fa fa-sm fa-angle-down" style="font-size: 15px;font-weight: bolder; margin-left: 6px;"></em></button>
                        <div class="dropdown-menu theme-panel pull-right dropdown-custom advance-history" uib-dropdown-menu role="menu" aria-labelledby="button1">
                            <div class="col-md-12">
                                <quanlyhoso.thutuc37.directives.viewhistorydrop hosoid="vm.dataItem.id" />
                            </div>
                        </div>
                        <a ng-click="vm.closeModal()"><em class="glyphicon glyphicon-remove font-green-meadow"></em></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="portlet-body form">
            <div class="row">
                <div class="col-md-7">
                    <uib-tabset class="tab-container tabbable-line">
                        <uib-tab tabindex="1" heading="Công văn">
                            <div class="portlet light bordered" style="height: 630px">
                                <iframe title="title" style="width: 100%; min-height: 600px;border:0" ng-src="{{vm.trustSrc(vm.duongDanCA)}}"  ></iframe>
                            </div>
                        </uib-tab>
                    </uib-tabset>
                </div>
                <div class="col-md-5">
                    <div class="portlet box blue-soft">
                        <div class="portlet-title">
                            <div class="caption">
                                Thông tin chung
                            </div>
                            <div class="tools">
                                <a href="javascript:;" class="collapse"></a>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="container-fluid">
                                <div class="row" style="padding-top: 10px;margin-bottom:20px;">
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <label class="control-label"><strong>Người đề nghị:</strong> </label>
                                            <text>{{vm.dataItem.tenNguoiDaiDien}}</text>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label"><strong>Số đăng ký:</strong> </label>
                                            <text> {{vm.dataItem.soDangKy}} </text>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label"><strong>Trưởng phòng:</strong> </label>
                                            <text>{{vm.objInfo.tenTruongPhong}}</text>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label"><strong>Lãnh đạo Cục:</strong> </label>
                                            <text>{{vm.objInfo.tenLanhDaoCuc}}</text>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right" style="padding-bottom: 10px;">
                                    <button type="button" class="btn green" ng-disabled="vm.duyetHoSo.isCoSaiSot==true" ng-click="vm.dongDauGiayTo()" button-busy="vm.saving" busy-text="@L("SavingWithThreeDot")"><em class="fa fa-arrow-up"></em> Đóng dấu</button>
                                    <button type="button" class="btn red" ng-click="vm.closeModal()"><em class="fa fa-close"></em> Đóng</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>