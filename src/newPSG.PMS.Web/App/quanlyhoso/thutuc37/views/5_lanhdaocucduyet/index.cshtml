            <uib-tabset class="tab-container tabbable-line  frame-container" id="mainTab">
                <button title="Xem trên cửa sổ mới" class="fa fa-clone iframe-button" style="float:right" ng-click="vm.xemTaiLieuFull('mainTab');"></button>
