<div id="cauHinhChung" class="ng-scope" ng-controller="website.views.cauhinhchung.common as vm">
    <div class="portlet light bordered ng-isolate-scope">
        <div class="portlet-title">
            <div class="caption font-green-meadow">
                <i class="icon-list font-green-meadow"></i>
                <span class="caption-subject bold uppercase">Danh sách cấu hình</span>
            </div>
            <div class="actions">
                <button class="btn green-meadow" ng-click="vm.add()"><i class="fa fa-plus"></i> Thêm cấu hình</button>
                <button class="btn green-meadow" ng-click="vm.save()"><i class="fa fa-save"></i> Lưu cấu hình</button>
            </div>
        </div>
        <div ng-cloak class="portlet-body">
            <md-content>
                <md-tabs md-dynamic-height md-border-bottom>
                    <md-tab ng-repeat="group in vm.group" label="{{group.title}}">
                        <div class="form-group clearfix margin-top-15" ng-repeat="item in vm.cauHinhChungs | filter : {nhomCauHinh: group.value}  track by $index">
                            <label class="col-md-2 col-sm-2 col-xs-12 control-label">
                                {{item.moTa}}
                                ({{item.tuKhoa}})
                            </label>
                            <div class="col-md-10 col-sm-10 col-xs-12" ng-if="item.kieuCauHinh==1">
                                <input class="form-control" type="text" ng-model="item.giaTri" data-fv-trigger="blur" />
                            </div>
                            <div class="col-md-10 col-sm-10 col-xs-12" ng-if="item.kieuCauHinh==2">
                                <input class="form-control"
                                       type="text"
                                       ng-model="item.giaTri" id="{{item.tuKhoa}}"
                                       data-fv-trigger="blur" style="width:88%; float:left" />
                                <button class="btn btn-default" type="button" style="width:10%; float:right" ng-click="vm.ChooseImage(item.tuKhoa)">Chọn ảnh</button>
                            </div>
                            <div class="col-md-10 col-sm-10 col-xs-12" ng-if="item.kieuCauHinh==3">
                                <textarea class="form-control"
                                          type="text"
                                          ng-model="item.giaTri"
                                          data-fv-trigger="blur" ckeditor="ckDescription"><</textarea>
                            </div>
                        </div>
                    </md-tab>
                </md-tabs>
            </md-content>
        </div>
    </div>
</div>
