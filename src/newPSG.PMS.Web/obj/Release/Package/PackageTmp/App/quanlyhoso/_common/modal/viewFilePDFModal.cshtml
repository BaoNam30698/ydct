@using Abp.Authorization.Users
    <style>
        .modal-header {
            background-color: #428bca;
        }
    </style>
<div>
    <div class="modal-header">
        <h4 class="modal-title text-center text-uppercase">
            {{vm.title}}
            <button type="button" class="close" ng-click="vm.cancel()" aria-hidden="true"></button>
        </h4>
    </div>
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row" style="height: 700px">
                <iframe title="Xem tài liệu" style="width: 100%; height: 100%;" ng-src="{{vm.trustSrc(vm.pathPDF)}}" frameborder="0"></iframe>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button ng-disabled="vm.saving" type="button" class="btn btn-default" ng-click="vm.cancel()"><i class="glyphicon glyphicon-remove"></i> @L("Cancel")</button>
    </div>
</div>