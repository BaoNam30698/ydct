<div id="dataItemCreateOrEditForm">
    <div class="modal-header">
        <h4 class="modal-title text-center uppercase">
            <span>nội dung thẩm định chuyên gia</span>
            <button type="button" class="close" ng-click="vm.cancel()" aria-hidden="true"></button>
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label>Thủ tục</label>
                    <div app.common.filter.thutucenum selected="vm.dataItem.thuTucId" is-disabled="true"></div>
                </div>
                <div class="col-md-6">
                    <label>Vai trò</label>
                    <div filter.common.rolelevel id-value="vm.dataItem.roleLevel" is-disabled="true"></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6" ng-if="vm.dataItem.roleLevel == vm.ROLE_LEVEL.CHUYEN_GIA">
                    <label>Tiểu ban</label>
                    <div filter.common.tieuban value="vm.dataItem.tieuBanEnum" is-disabled="true"></div>
                </div>
                <div class="col-md-6">
                    <label>Loại biên bản</label>
                    <div filter.common.loaibienban value="vm.dataItem.loaiBienBanThamDinhId" is-disabled="true"></div>
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="caption">
                <em class="fa fa-hand-rock-o font-yellow-casablanca"></em>
                <span class="caption-subject bold font-yellow-casablanca uppercase"> Nội dung thẩm định </span>
            </div>
            <div class="table-scrollable table-scrollable-borderless">
                <table class="table table-hover table-light">
                    <thead>
                        <tr class="uppercase">
                            <th style="width:110px;"> STT </th>
                            <th> Tiêu đề thẩm định </th>
                            <th style="width:95px;text-align:center"> Bắt buộc </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in vm.dataItem.listNoiDung">
                            <td>
                                {{item.stt}}
                            </td>
                            <td>
                                {{item.tieuDeThamDinh}}
                            </td>
                            <td>
                                <div style="margin: 0;text-align:center;">
                                    <em ng-show="item.isValidate" class="fa fa-check fa-3 font-blue-steel"></em>
                                    <em ng-hide="item.isValidate" class="fa fa-times fa-3 font-red"></em>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button ng-disabled="vm.saving" type="button" class="btn red" ng-click="vm.cancel()"><em class="glyphicon glyphicon-remove"></em>@L("Cancel")</button>
    </div>
</div>

<style>
    .modal-dialog {
        width: 1000px;
    }
</style>