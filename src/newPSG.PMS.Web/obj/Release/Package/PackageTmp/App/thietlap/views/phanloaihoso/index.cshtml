@using newPSG.PMS.Localization
<div class="danhsach box_grid_ho_so" ng-controller="thietlap.views.phanloaihoso.index as vm">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-blue-steel">
                <em class="icon-list font-blue-steel"></em>
                <span class="caption-subject bold uppercase">Thiết lập phân loại hồ sơ</span>
            </div>
            <div class="actions">
                <button class="btn blue-steel" ng-click="vm.openLoaiHoSoModal()"><em class="fa fa-plus"></em> Thêm mới</button>
            </div>
        </div>
 
        <div class="portlet-body">
            <div class="portlet-body">
                <div kendo-grid
                     k-options="vm.gridOptions"
                     k-data-source='vm.gridDataSource'
                     k-columns="vm.columnGrid"></div>
            </div>
        </div>
    </div>
</div>
