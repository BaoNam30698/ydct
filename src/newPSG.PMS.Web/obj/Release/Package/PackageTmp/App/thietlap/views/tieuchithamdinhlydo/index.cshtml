@using newPSG.PMS.Localization
<div class="danhsach box_grid_ho_so" ng-controller="thietlap.views.setting.tieuchithamdinhlydo.index as vm">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-blue-steel">
                <em class="icon-list font-blue-steel"></em>
                <span class="caption-subject bold uppercase">Danh sách tiêu chí lý do</span>
            </div>
            <div class="actions">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-8 col-xs-8">
                <div class="input-group">
                    <input type="text" id="skeyword" class="form-control" name="Keyword" ng-model="vm.filter.filter" enter-key="vm.getDataGrids()" onfocus="onFocusElei(this)"
                           placeholder="Nhập tên Action. Ấn Enter để tìm">
                    <div class="input-group-btn" uib-dropdown auto-close="disabled">
                        <button tabindex="-1" class="btn blue-steel" type="button" ng-click="vm.getDataGrids()"><em class="fa fa-search"></em></button>
                        <button class="btn default" type="button" ng-click="vm.initGridHoSo()"><em class="fa fa-repeat"></em></button>
                    </div>
                </div>
            </div>


            <div class="col-lg-4 col-md-4">
                <div class="tools text-right" style="margin-right: 17px;">
                    <button type="button" class="btn blue-steel" ng-click="vm.showCreateOrEditModal()"><em class="fa fa-plus"></em><span> Thêm mới</span></button>
                </div>
            </div>

        </div>
        <div class="portlet-body">
            <div class="portlet-body">
                <div kendo-grid
                     k-options="vm.gridOptions"
                     k-data-source='vm.gridDataSource'
                     k-columns="vm.columnGrid"></div>
            </div>
        </div>
    </div>
</div>
