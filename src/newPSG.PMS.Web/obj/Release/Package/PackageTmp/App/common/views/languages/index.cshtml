@using newPSG.PMS.Localization
<div ng-controller="common.views.languages.index as vm">

    <div class="portlet light margin-bottom-0">
        <div class="portlet-title">
            <div class="row margin-bottom-5">
                <div class="col-xs-6">
                    <div class="page-head">
                        <div class="page-title">
                            <h1>
                                <span>@L("Languages")</span> <small>@L("LanguagesHeaderInfo")</small>
                            </h1>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 text-right">
                    <button ng-if="vm.permissions.create" class="btn green-meadow" ng-click="vm.createLanguage()"><i class="fa fa-plus"></i> @L("CreateNewLanguage")</button>
                </div>
            </div>
        </div>
        <div class="portlet-body">
            <div busy-if="vm.loading">
                @*<div ui-grid="vm.gridOptions" ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>*@
                <div id="gdLanguge" kendo-grid k-pageable='{"refresh": true, "pageSizes": true, messages: {empty: "Không có dữ liệu", display: "Hiển thị từ {0} đến {1}/{2} bản ghi",itemsPerPage: "Bản ghi hiển thị"}}' k-data-source='vm.languageGridOptions' k-columns="vm.languageColumns"></div>
            </div>
            <p ng-if="vm.currentTenantId" class="margin-top-20">
                @("* " + L("CanNotEditOrDeleteDefaultLanguages"))
            </p>
        </div>
    </div>
</div>