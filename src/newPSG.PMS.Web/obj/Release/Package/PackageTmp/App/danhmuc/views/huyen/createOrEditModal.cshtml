<div id="huyenCreateOrEditForm">
    <div class="modal-header">
        <h4 class="modal-title">
            <span ng-if="!vm.huyen.id">Tạo Quận Huyện</span>
            <span ng-if="vm.huyen.id">Sửa Quận Huyện</span>
            <button type="button" aria-hidden="true" class="close" ng-click="vm.cancel()"></button>
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="row">
                <div class="col-md-9">
                    <label>Tên Quận/Huyện</label><span><span class="font-red">*</span></span>
                    <input class="form-control"
                           type="text"
                           name="Ten"
                           ng-model="vm.huyen.ten"
                           data-fv-notempty="true"
                           data-fv-notempty-message="Không được để trống trường này"
                           data-fv-trigger="blur" />
                </div>
                <div class="col-md-3">
                    <label>Kích Hoạt</label><br />
                    <input bs-switch
                           ng-model="vm.huyen.isActive"
                           type="checkbox"
                           switch-on-text="<i class='fa fa-check' aria-hidden='true'></i>"
                           switch-on-color="success"
                           switch-off-text="<i class='fa fa-times' aria-hidden='true'></i>"
                           ng-true-value=true
                           ng-false-value=false>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Mã Huyện</label><span><span class="font-red">*</span></span>
            <input class="form-control"
                   type="number"
                   name="niisId"
                   ng-model="vm.huyen.niisId"
                   data-fv-notempty="true"
                   data-fv-notempty-message="Không được để trống trường này"
                   data-fv-trigger="blur" />
        </div>
        <div class="form-group">
            <label>Tỉnh/Thành Phố</label><span><span class="font-red">*</span></span>
            <input style="width: 100%"
                   id="ddlTinh"
                   kendo-drop-down-list
                   name="ddlTinh"
                   ng-model="vm.huyen.tinhId"
                   k-options="vm.tinhOptions"
                   data-fv-notempty="true"
                   data-fv-notempty-message="Không được để trống trường này"
                   data-fv-trigger="blur"
                   class="form-control" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" button-busy="vm.saving" busy-text="@L("SavingWithThreeDot")" class="btn green-meadow" ng-click="vm.save()"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        <button ng-disabled="vm.saving" type="button" class="btn red" ng-click="vm.cancel()"><i class="glyphicon glyphicon-remove"></i> @L("Cancel")</button>
    </div>
</div>