<div id="article" class="ng-scope" ng-controller="chuyenmucbaiviet.huongdansudung.article.index as vm">
    <div class="portlet light bordered ng-isolate-scope">
        <div class="portlet-title">
            <div class="caption font-blue-soft">
                <i class="icon-list font-blue-soft"></i>
                <span class="caption-subject bold uppercase">Danh sách bài viết</span>
            </div>
            <div class="actions">
                <button class="btn blue-soft" ng-click="vm.taoarticle()"><i class="fa fa-plus"></i> Thêm bài viết</button>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row form-group">
                <div class="col-lg-3 col-md-3 col-xs-5"><input class="form-control ng-pristine ng-valid ng-empty ng-touched" name="Keyword" ng-model="vm.filter.filter" enter-key="vm.getGridData()" placeholder="Nhập tiêu đề" type="text"></div>
                <div class="col-lg-3 col-md-3 col-xs-5">
                    <select placeholder="Danh mục"
                            ng-model="vm.filter.categoryId"
                            kendo-drop-down-list
                            data-fv-trigger="blur"
                            k-options="vm.categoryOptions"
                            class="form-control" style="width:100%;"></select>
                </div>
                <div class="col-lg-1 col-md-1 col-xs-2">
                    <button tabindex="-1" class="btn blue-soft" type="button" ng-click="vm.getGridData()">Tìm kiếm</button>
                </div>
            </div>
        </div>
        <div class="portlet light bordered margin-10-left-right" id="row-main">
            <div class="portlet-body">
                <div busy-if="vm.loading">
                    <div id="gdarticle" k-serverPaging="true" k-pageSize="5" k-pageable='{"refresh": true, "pageSizes": true, messages: {empty: "Không có dữ liệu", display: "Hiển thị từ {0} đến {1}/{2} bản ghi",itemsPerPage: "Bản ghi hiển thị"}}' kendo-grid k-data-source='vm.articleGridOptions' k-columns="vm.articleColumns"></div>
                </div>
            </div>
        </div>
    </div>
</div>