    <div class="events-wrapper events-listing">
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <!--Event List Box Start-->
                    <div class="event-post-full" style="padding:20px;">

                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-center vertical-align-middle">STT</th>
                                    <th scope="col" style="width: 15%;" class="text-center vertical-align-middle">Số hồ sơ TTHC</th>
                                    <th scope="col" style="width: 35%;" class="text-center vertical-align-middle">
                                        Tên thủ tục
                                        hành chính
                                    </th>
                                    <th scope="col" style="width: 20%;" class="text-center vertical-align-middle">
                                        Tên VBQPPL
                                        quy định nội dung sửa đổi, bổ sung, thay thế
                                    </th>
                                    <th scope="col" style="width: 20%;" class="text-center vertical-align-middle">
                                        Cơ quan thực hiện
                                    </th>
                                    <th scope="col" style="width: 10%;" class="text-center vertical-align-middle">
                                        Chi tiết
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">A</th>
                                    <td colspan="5" class="font-weight-bold">Thủ tục hành chính cấp Trung ương</td>
                                </tr>
                                @foreach (var item in Model.Where(x => x.HanhChinhCap == 1))
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.SoHoSo</td>
                                        <td>@item.TenThuTuc</td>
                                        <td>@item.TenVBQPPL</td>
                                        <td>@item.CoQuanThucHien</td>
                                        <td><a href="/thu-tuc/@item.DuongDan">Xem chi tiết</a></td>
                                    </tr>
                                    i++;
                                }

                                <tr>
                                    <th scope="row">B</th>
                                    <td colspan="5" class="font-weight-bold">Thủ tục hành chính cấp tỉnh</td>
                                </tr>
                                @foreach (var item in Model.Where(x => x.HanhChinhCap == 2))
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.SoHoSo</td>
                                        <td>@item.TenThuTuc</td>
                                        <td>@item.TenVBQPPL</td>
                                        <td>@item.CoQuanThucHien</td>
                                        <td><a href="/thu-tuc/@item.DuongDan">Xem chi tiết</a></td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!--Events End-->
    </div>
