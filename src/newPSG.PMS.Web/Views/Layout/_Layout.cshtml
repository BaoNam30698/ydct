@using System.Web.Optimization
@using Abp.Web.Mvc.Extensions
@using newPSG.PMS.Localization
@{
    SetAntiForgeryCookie();
}
<!DOCTYPE html>
<html ng-app="MyApp" class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta name="description" content="desc">
    <meta name="author" content="smartit-source">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Title -->
    <title>@newPSG.PMS.Web.Helpers.SystemConfigHelper.GetSettingValue("SeoTitle")</title>
    <!-- Favicon and Touch Icons -->
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Niramit:300,400,500,600,700" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/libs/assets/css/fontawesome/css/all.min.css" rel="stylesheet" />

    @Styles.Render("~/Bundles/Frontend/libs/css" + (CultureHelper.IsRtl ? "RTL" : ""))
    @Styles.Render("~/Bundles/Common/css")

    @Styles.Render("~/Bundles/FrontendChicuc/libs/css")

    <style>
        .pre-header {
            padding: 10px 0px;
            background: #2a60a0;
            color: #fff;
        }

            .pre-header a {
                text-align: center;
                border: 1px solid #fff;
                border-radius: 5px;
                padding: 6px 10px;
                color: #fff;
                -webkit-transition: all 300ms;
                -o-transition: all 300ms;
                transition: all 300ms;
            }

            .pre-header i {
                padding-right: 5px;
            }
    </style>

    @RenderSection("Styles", false)
    @Scripts.Render("~/Bundles/FrontendChicucModernizr/libs/js")
</head>
<body>
    <div class="wrapper hcc-kcb">
        <div class="page-loader">
            <div class="loader">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
        @Html.Action("Header", "Layout", new { currentPageName = ViewBag.CurrentPageName })
        @RenderBody()

        <!--Footer Start-->
        <footer class="kcb-footer wf100 ">
            <div class="container">
                @Html.Raw(newPSG.PMS.Web.Helpers.SystemConfigHelper.GetSettingValue("ThongTinChanTrang"))
            </div>
        </footer>
        <div class="social-ring">
            <div class="social-ring-main" >
                <div class="social-ring-content">
                    <a target="_blank" href="tel:04 6273 2247" class="call-icon" rel="nofollow">
                        <img alt="" src="~/Content/Uploads/images/phone-i.png">
                        <div class="animated alo-circle"></div>
                        <div class="animated alo-circle-fill"></div>
                        <span>Hotline: 04 6273 2247</span>
                    </a>
                    <a target="_blank" href="#" class="mes">
                        <img src="~/Content/Uploads/images/mess-i.png">
                        <div class="animated alo-circle"></div>
                        <div class="animated alo-circle-fill"></div>
                        <span>Message Facebook</span>
                    </a>
                    <a target="_blank" href="#" class="zalo">
                        <img alt="" src="~/Content/Uploads/images/zalo-i.png">
                        <div class="animated alo-circle"></div>
                        <div class="animated alo-circle-fill"></div>
                        <span>Zalo: 04 6273 2247</span>
                    </a>
                </div>
            </div>
            <a class="user-support" title="Hỗ trợ trực tuyến">
                <i class="fas fa-users" aria-hidden="true"></i>
                <div class="animated alo-circle"></div>
                <div class="animated alo-circle-fill"></div>
            </a>
        </div>
    </div>

    <!-- JavaScript -->
    @Scripts.Render("~/Bundles/FrontendChicuc/libs/js")
    @Scripts.Render("~/Bundles/Common/js")
    @Scripts.Render("~/Bundles/Scripts/FrontendApp/js")

    @RenderSection("Scripts", false)


    <script>
        $(window).load(function() {
            $(".page-loader").hide();
        });
        $('.user-support').click(function (event) {
            $('.social-ring-main').slideToggle();
        });
    </script>
    
</body>
</html>